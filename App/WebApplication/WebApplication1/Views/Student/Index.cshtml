@model WebApplication1.Models.Student

@{
    ViewBag.Title = "Index";
}

<h2>Szukaj</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Numer Indeksu:</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.index, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.index, "", new { @class = "text-danger" })
                </div>
            </div>  
            <div style="clear:both">
                <br/>
                <input type="submit" value="Szukaj" class="btn btn-default" />
            </div>
        </div>
        <div style="clear:both; width:500px; height:170px; border:dotted 5px black">
            <h3>Twoja pozycja w kolejce 1:  </h3>@Html.DisplayFor(model => model.queue1)
            <h3>Twoja pozycja w kolejce 2:  </h3>@Html.DisplayFor(model => model.queue2)
            <h3>Twoja pozycja w kolejce 3: </h3>@Html.DisplayFor(model => model.queue3)
        </div>
    </div>
}

